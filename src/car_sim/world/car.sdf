<?xml version="1.0" ?>
<sdf version='1.9'>
  <model name='simple_car'>

    <ros2_control name="GazeboSystem" type="system">
      <hardware>
        <plugin>gazebo_ros2_control/GazeboSystem</plugin>
      </hardware>
      <joint name="slider_to_cart">
        <command_interface name="effort">
          <param name="min">-1000</param>
          <param name="max">1000</param>
        </command_interface>
        <state_interface name="position">
          <param name="initial_value">1.0</param>
        </state_interface>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
    </ros2_control>

    <!-- Base Link -->
    <link name='base_link'>
      <inertial>
        <pose>0.045454545454545463 0 0.1090909090909091 0 0 0</pose>
        <mass>5.5</mass>
        <inertia>
          <ixx>0.1095454545454545</ixx>
          <ixy>0</ixy>
          <ixz>-0.022727272727272721</ixz>
          <iyy>0.2231818181818182</iyy>
          <iyz>0</iyz>
          <izz>0.21863636363636371</izz>
        </inertia>
      </inertial>

      <!-- Main body collision & visual -->
      <collision name='base_link_collision'>
        <pose>0 0 0.1 0 0 0</pose>
        <geometry>
          <box><size>1 0.5 0.2</size></box>
        </geometry>
      </collision>
      <visual name='base_link_visual'>
        <pose>0 0 0.1 0 0 0</pose>
        <geometry>
          <box><size>1 0.5 0.2</size></box>
        </geometry>
        <material>
          <diffuse>0 1 1 1</diffuse>
          <ambient>0 1 1 1</ambient>
        </material>
      </visual>
    </link>

    <!-- Wheel joints and links (4 wheels) -->
    <!-- Front Left -->
    <joint name='front_left_wheel_joint' type='revolute'>
      <pose relative_to='base_link'>0.4 0.25 0.05 0 0 0</pose>
      <parent>base_link</parent>
      <child>front_left_wheel</child>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>
    <link name='front_left_wheel'>
      <collision name='front_left_wheel_collision'>
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry><cylinder><length>0.05</length><radius>0.1</radius></cylinder></geometry>
      </collision>
      <visual name='front_left_wheel_visual'>
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry><cylinder><length>0.05</length><radius>0.1</radius></cylinder></geometry>
        <material><diffuse>0 0 0 1</diffuse></material>
      </visual>
    </link>

    <!-- Front Right -->
    <joint name='front_right_wheel_joint' type='revolute'>
      <pose relative_to='base_link'>0.4 -0.25 0.05 0 0 0</pose>
      <parent>base_link</parent>
      <child>front_right_wheel</child>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>
    <link name='front_right_wheel'>
      <collision name='front_right_wheel_collision'>
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry><cylinder><length>0.05</length><radius>0.1</radius></cylinder></geometry>
      </collision>
      <visual name='front_right_wheel_visual'>
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry><cylinder><length>0.05</length><radius>0.1</radius></cylinder></geometry>
        <material><diffuse>0 0 0 1</diffuse></material>
      </visual>
    </link>

    <!-- Rear Left -->
    <joint name='rear_left_wheel_joint' type='revolute'>
      <pose relative_to='base_link'>-0.4 0.25 0.05 0 0 0</pose>
      <parent>base_link</parent>
      <child>rear_left_wheel</child>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>
    <link name='rear_left_wheel'>
      <collision name='rear_left_wheel_collision'>
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry><cylinder><length>0.05</length><radius>0.1</radius></cylinder></geometry>
      </collision>
      <visual name='rear_left_wheel_visual'>
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry><cylinder><length>0.05</length><radius>0.1</radius></cylinder></geometry>
        <material><diffuse>0 0 0 1</diffuse></material>
      </visual>
    </link>

    <!-- Rear Right -->
    <joint name='rear_right_wheel_joint' type='revolute'>
      <pose relative_to='base_link'>-0.4 -0.25 0.05 0 0 0</pose>
      <parent>base_link</parent>
      <child>rear_right_wheel</child>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>
    <link name='rear_right_wheel'>
      <collision name='rear_right_wheel_collision'>
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry><cylinder><length>0.05</length><radius>0.1</radius></cylinder></geometry>
      </collision>
      <visual name='rear_right_wheel_visual'>
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry><cylinder><length>0.05</length><radius>0.1</radius></cylinder></geometry>
        <material><diffuse>0 0 0 1</diffuse></material>
      </visual>
    </link>

    <!-- CAMERA -->
    <link name='camera_link'>
      <pose>0.5 0 0.2 0 0 0</pose>
      <sensor name="camera_sensor" type="camera">
        <camera>
          <horizontal_fov>1.3962634</horizontal_fov>
          <image>
            <width>800</width>
            <height>600</height>
            <format>R8G8B8</format>
          </image>
          <clip><near>0.1</near><far>100</far></clip>
        </camera>
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
          <ros>
            <namespace>/car/camera</namespace>
            <remapping>image_raw:=image_raw</remapping>
          </ros>
          <camera_name>camera</camera_name>
          <image_topic_name>image_raw</image_topic_name>
          <camera_info_topic_name>camera_info</camera_info_topic_name>
          <frame_name>camera_link</frame_name>
        </plugin>
      </sensor>
    </link>

    <!-- GPS -->
    <link name='gps_link'>
      <pose>0 0 0.2 0 0 0</pose>
      <sensor name="gps_sensor" type="gps">
        <always_on>true</always_on>
        <update_rate>1</update_rate>
        <plugin name="gps_plugin" filename="libgazebo_ros_gps.so">
          <ros>
            <namespace>/car/gps</namespace>
            <remapping>fix:=fix</remapping>
          </ros>
          <frame_name>gps_link</frame_name>
        </plugin>
      </sensor>
    </link>

  </model>
</sdf>
